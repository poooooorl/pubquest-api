{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    /* ADD THESE TWO LINES: */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
      ],
    },
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}